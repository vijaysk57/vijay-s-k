#include <stdio.h>
void main()
{
int n;
printf("enter the value of n: ");
scanf("%d",&n);
if (n > 0)
{
printf("The number %d is positive and ", n);
}
else if (n< 0)
{
printf("The number %d is negative and ", n);
}
else
{
printf("The number %d is zero and ", n);
}
if (n % 2 == 0) {
printf("even.\n");
}
else
{
printf("odd.\n");
}
}
